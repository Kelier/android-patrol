<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".LoginActivityold">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dip" />

        <TextView
            android:id="@+id/topname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dip"
            android:gravity="center"
            android:text="" />
        <RelativeLayout
            android:id="@+id/relative_user"
            android:layout_width="250dip"
            android:layout_height="45dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/txtborder"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/image_user"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/icon_login_user"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true" />
        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="请输入用户名"
            android:maxLength="20"
            android:paddingLeft="20px"
            android:paddingRight="2dp"
            android:singleLine="true"
            android:textColorHighlight="#7e4d84"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/image_clear"
            android:layout_toRightOf="@+id/image_user"/>
            <ImageView
                android:id="@+id/image_clear"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_pwd"
            android:layout_width="250dip"
            android:layout_height="45dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/txtborder"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/image_pwd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/icon_login_pwd"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true" />
            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:paddingLeft="20px"
                android:paddingRight="2dp"
                android:password="true"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/image_eye"
                android:layout_toRightOf="@+id/image_pwd"
               />
            <ImageView
                android:id="@+id/image_eye"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_vcode"
            android:layout_width="250dip"
            android:layout_height="45dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/txtborder">
            <EditText
                android:id="@+id/vcode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint=" 请输入验证码"
                android:paddingLeft="50px"
                android:paddingRight="2dp"
                android:password="true"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/vcodebtn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button
                android:id="@+id/vcodebtn"
                android:layout_width="90dip"
                android:layout_height="24dip"
                android:layout_marginRight="10dp"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:background="@drawable/vcode"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <Button
            android:id="@+id/registerbtn"
            android:layout_width="250dip"
            android:layout_height="45dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/loginbtn"
            android:gravity="center"
            android:text="注册"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

    </LinearLayout>


</RelativeLayout>
